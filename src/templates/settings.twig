{% import "_includes/forms" as forms %}

{% set elementType = 'craft\\elements\\Entry' %}

{% do view.registerAssetBundle("kuriousagency\\emailsubscriptions\\assetbundles\\emailsubscriptions\\EmailSubscriptionsAsset") %}

{{ forms.selectField({
    label: 'Service',
    instructions: 'Please choose your service',
    id: 'service',
    name: 'service',
	options: services,
    value: settings.service})
}}


{{ forms.textField({
    required:     true,
    label:        'API Key',
    instructions: '',
    id:           'apiKey',
    name:         'apiKey',
    placeholder:  '',
    value:        settings.apiKey,
}) }}

{% set lists = [] %}

{% for list in craft.emailSubscriptions.lists %}
	{% set lists = lists|merge({('_'~list.id): (list.name)}) %}
{% endfor %}

{% if lists|length > 1 %}
	{{ forms.selectField({
		label: 'Default List',
		instructions: 'Please select your default list',
		id: 'defaultListId',
		name: 'defaultListId',
		value: settings.defaultListId,
		options: lists
	}) }}
{% endif %}

